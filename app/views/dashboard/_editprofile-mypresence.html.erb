<div class="headerlinks">Edit Profile</div>
<div class="headerlinks">Identity Verfication</div>
<div class="headerlinks">Reviews</div>
<div class="headerlinks">References</div>

<br/>

<%= simple_form_for(resource, :as => current_user, :url => registration_path(current_user), :html => { :method => :put, :class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :email, autofocus: "true" %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <%= f.input :password, label: "New Password",autocomplete: "off" %> 
  <%= f.input :password_confirmation, label: "New Password Confirmation",autocomplete: "off" %>
  <%= f.input :current_password %>

  <div class="form-actions">
    <%= f.submit "Update", class: "btn btn-primary" %>
  </div>
<% end %>
  
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), class: "btn btn-medium btn-primary" , :data => { :confirm => "Are you sure?" }, :method => :delete %></p>

<%= link_to "Back", :back %>
		</div>
</div>